<div class="row">
    <form action="/upload_image" method="POST" enctype="multipart/form-data">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="row">



            <div class="file-field input-field col m6 s12">
                <div class="btn">
                    <span>background img:</span>
                    <input type="file" name="first_image">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
                <!-- img: <input type="file" name="my_image" /> -->
                <!-- background img: <input type="file" name="first_image" /> -->
            </div>
            <div class="file-field input-field col m6 s12">
                <div class="btn">
                    <span>face img:</span>
                    <input type="file" name="second_image">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>

            </div>

            <div class="input-field col s12 m6">
                <select name="location">
                    <option value="" disabled selected>Choose your location</option>
                    <option value="getty">Getty Center</option>
                    <option value="lacma">LACMA</option>
                    <option value="hollywood">Hollywood</option>
                    <option value="dodger">Dodger Stadium</option>
                </select>
                <label>Location</label>
            </div>

            <div class="row">
                <form class="col s12 m6" action="uploaded" method="GET">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="textarea1" class="materialize-textarea" name="content"></textarea>
                            <label for="textarea1">Description</label>
                        </div>
                    </div>
                </form>
            </div>
            <input type="submit"/>
        </div>
    </form>
</div>

