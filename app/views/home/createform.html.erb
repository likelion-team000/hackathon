<script type="text/javascript">
    $(document).ready(function () {
        var preview_one = $(".upload-preview-one img");

        $(".file-one").change(function (event) {
            var input = $(event.currentTarget);
            var file = input[0].files[0];
            var reader = new FileReader();
            reader.onload = function (e) {
                image_base64 = e.target.result;
                preview_one.attr("src", image_base64);
            };
            reader.readAsDataURL(file);
        });

        var preview_two = $(".upload-preview-two img");

        $(".file-two").change(function (event) {
            var input = $(event.currentTarget);
            var file = input[0].files[0];
            var reader = new FileReader();
            reader.onload = function (e) {
                image_base64 = e.target.result;
                preview_two.attr("src", image_base64);
            };
            reader.readAsDataURL(file);
        });

    });
</script>
